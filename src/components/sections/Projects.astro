---
import GitHub from "@/icons/GitHub.astro"
import Section from "../Section.astro"

import { projects } from "cv_es.json"
import Chip from '@/components/Chip.astro';
---

<Section title="Proyectos">
    <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {projects.map(({ url, description, highlights, name, isActive }) => {
          return (
            <li class="border border-gray-300 rounded-lg p-4 shadow-sm hover:shadow-md transition-shadow">
              <article>
                <header>
                  <h3 class="text-lg font-semibold mb-2">
                    <a href={url} target="_blank" title={`Ver el proyecto ${name}`} class="text-grey-500 hover:underline">
                      {name}
                    </a>
                    {isActive && <span class="text-green-500 ml-2">â€¢</span>}
                  </h3>
                  <p class="text-gray-600">{description}</p>
                </header>
                <footer class="mt-4 flex flex-wrap gap-2">
                  {highlights.map((highlight) => {
                    return <Chip text={highlight}></Chip>
                  })}
                </footer>
              </article>
            </li>
          );
        })}
      </ul>
</Section>

