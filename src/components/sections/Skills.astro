---
const { skills, title } = Astro.props

import Section from "../Section.astro"
---

<Section title={title}>
  <ul class="grid grid-cols-3 sm:grid-cols-4 lg:grid-cols-5 gap-4 mt-3">
    {
      skills.map(({ name, keywords, icon }:any) => {

        return (

            <li class="rounded-lg p-4 shadow-sm hover:shadow-md transition-shadow">
              <article >
                <header>
                   {icon && <i class={`${icon} text-2xl mr-2`}></i>}
                     
                  <h3 class="text-lg font-semibold mb-2" aria-label={name}>
                    <h3>{name}</h3>
                  </h3>
                </header>
               
              </article>
            </li>

         
        )
      })
    }
  </ul>
</Section>

