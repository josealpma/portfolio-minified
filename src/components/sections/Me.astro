---
import { basics } from "cv_es.json"
import Section from "@/components/Section.astro"
import Mail from "@/icons/Mail.astro"
import Phone from "@/icons/Phone.astro"
import X from "@/icons/X.astro"
import LinkedIn from "@/icons/LinkedIn.astro"
import GitHub from "@/icons/GitHub.astro"
import WorldMap from "@/icons/WorldMap.astro"

const { name, label, image, location, profiles, phone, email } = basics
const { city, region } = location

const SOCIAL_ICONS: any = {
  GitHub,
  LinkedIn,
  X,
}

const linkedInfo = profiles.find(({ network }) => network === "LinkedIn")
const linkedUrl = linkedInfo?.url

const printInfo = [email, phone, linkedUrl].filter(Boolean).join(" • ")
---

<Section>
  <div class="flex gap-1 justify-around">
    <div class="">
      <h1 class="text-3xl ">{name}</h1>
      <h2 class="">{label}</h2>
      <p class="flex items-center justify-start text-sm text-gray-600 mb-2">
        <WorldMap />
        <span class="mx-2">
          {city}, {region}
        </span>
      </p>
      
      <footer class="print">
        {printInfo}
      </footer>
      
      <footer class="no-print flex justify-start">
        {
          email && (
            <a class="inline-flex items-center bg-gray-100 text-black font-medium p-2 rounded hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-100 mr-1"
              href={`mailto:${email}`}
              title={`Enviar un correo electrónico a ${name} al correo ${email}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Mail />
            </a>
          )
        }
        {
          phone && (
            <a class="inline-flex items-center bg-gray-100 text-black font-medium p-2 rounded hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-100 mr-1"
              href={`tel:${phone}`}
              title={`Llamar por teléfono a ${name} al número ${phone}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Phone />
            </a>
          )
        }
        {
          profiles.map(({ network, url, username }) => {
            const Icon = SOCIAL_ICONS[network]

            return (
              <a class="inline-flex items-center bg-gray-100 text-black font-medium p-2 rounded hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-100 mr-1"
                href={url}
                title={`Visitar el perfil de ${name} en ${network}`}
                target="_blank"
                rel="noopener noreferrer"
              >
                <Icon />
              </a>  
            )
          })
        }
      </footer>
    </div>
    <aside>
      <img src={image} alt={name} class="w-32 rounded-2xl">
    </aside>
  
</Section>
